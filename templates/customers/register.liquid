<!-- /templates/customers/login.liquid -->
<div class="login__register">
    <div class="login__register--image">
        {{ 'mood-about.png' | asset_url | img_tag: 'Logo' }}
    </div>
    
        <div class="login__register--form">
            <div>
            <h1><span>Registrieren</span></h1>
            {% form 'create_customer' %} {{ form.errors | default_errors }}

            <label for="first_name">First Name</label>
            <input type="text" value="" name="customer[first_name]" size="30" />
            
            <label for="last_name">Last Name</label>
            <input type="text" value="" name="customer[last_name]" size="30" />
            
            <label for="email">Email Address</label>
            <input type="email" value="" name="customer[email]" size="30" />
            
            <label for="password">Password</label>
            <input type="password" value="" name="customer[password]" size="30" />
            
            <div class="login__buttons">
            <button class="cta">Registrieren</button>
            <button class="cta--secondary" type="button"><a href="/account/login">Login</a></button>
        </div>
            {% endform %} 
    
            </div>

        </div>
    </div>
    
    {% include 'tickerPurple' %}
    {% include 'instagram' %}