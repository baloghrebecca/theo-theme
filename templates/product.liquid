<section id="product__page">

  <div id="product__page__image__slider">
    <div>Pfeile</div>
    <div id="product__page__image__container">
      {% for image in product.images offset:9%}
      <a href="{{ image.src | img_url: 'large' }}">
        <img src="{{ image.src | img_url: 'compact' }}" alt="{{ image.alt | escape }}">
      </a>
      {% endfor %}
    </div>
    <div id="prouct__page__icon__container">
      <div class="prouct__page__icon">icon</div>
      <div class="prouct__page__icon">icon</div>
      <div class="prouct__page__icon">icon</div>
    </div>

  </div>

  <div id="product__page__info">
    <h1>{{ product.title }}</h1>
    <p>{{ product.content }}</p>
    <div id="product__page__form__container">
      form
    </div>
    <div id="product__page__metafields">
      <p>Sizing</p>
      <div class="product__page__panel">
        {{ product.metafields.global.sizing }}
      </div>
      <p>Material</p>
      <div class="product__page__panel">
        {{ product.metafields.global.material }}
      </div>
      <p>Transparency</p>
      <div class="product__page__panel">
        {{ product.metafields.global.transparency }}
      </div>
      <p>Shipping</p>
      <div class="product__page__panel">
        {{ product.metafields.global.shipping }}
      </div>


    </div>
  </div>

</section>


















