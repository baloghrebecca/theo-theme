//HEADER MOBIL

#header--mobile {
    transition: all 0.3s ease;
    padding: $padding__mobile;
    @extend .display-flex-vertical;
    position: fixed;
    z-index: 999999;
    background-color: $bg__color--grey;
    height: 100vh;
    width: 100%;
    margin-right: -100px;
    // right: -100%;
    left: 100%;

    #navigation__header--mobile {
        @extend .display-flex-horizontal;
        width: 100%;
        #link__logo--mobile {
            display: block;
            img {
