/* PRODUCTS */

#products__wrapper {
    background-image: url("../assets/001-2.png");
    background-size: cover;
    padding: $margin__body;
    padding-top: $padding__page--start;
    position: relative;
    padding-bottom: $padding__top;
    margin-bottom: rem(-10px);

    .background__gradient--grey {
        position: absolute;
        z-index: 10;
        top: 0px;
        bottom: 0;
        right: 0;
        left: 0;
        height: 100%;
        background: linear-gradient(180deg, rgba(239, 231, 222, 0) 40.94%, #efe7de 100%);
    }

    #products {
        z-index: 50;
        position: relative;
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        grid-column-gap: rem(35px);
        grid-row-gap: rem(50px);

        .product {
            width: 100%;
            position: relative;
            transition: all 0.3s ease;
            border-radius: $border-radius;

            a,
            p {
                padding-top: rem(17px);
                margin: 0;
                color: $text__color--blue;
                text-decoration: none;
                text-transform: uppercase;
                font-family: $font-sans;
                font-weight: $font-bold;
            }

            .product__image__wrapper {
                width: 100%;
                margin-bottom: rem(25px);
                position: relative;
                min-height: 340px;

                img {
                    opacity: 0;
                    position: absolute;
                    top: 40%;
                    left: 50%;

                    transform: translate(-50%, -50%);
                    width: 100%;

                    &:first-child {
                        opacity: 1;
                    }
                }

                .visible {
                    opacity: 1;
                }
            }

            .product__details {
                width: 100%;
                padding: rem(20px);
                border-radius: $border-radius;
                background-color: $bg__color--grey;

                .product__icons {
                    display: flex;

                    .product__icon {
                        // margin-right: rem(8px);

                        svg {
                            width: 80%;
                        }
                    }
                }

                .product__icons__cartButton {
                    display: flex;
                    justify-content: space-between;
                    align-items: center;
                }

                .button__cart {
                    margin-bottom: rem(5px);
                    border: 1px solid $bg__color--cyan;
                    background-color: $text__color--blue;
                    color: $bg__color--grey;
                    font-size: $text__size--mini;
                    padding: rem(5px) rem(10px);

                    &:hover {
                        background-color: transparent;
                        color: $text__color--blue;
                    }
                }

                .product__info {
                    transition: all 0.2s ease;
                    display: flex;
                    justify-content: space-between;
                    align-items: center;
                    // font-size: $text__size--small;

                    a,
                    p {
                        padding-top: 5px;
                        @media screen and (max-width: $tablet) {
                            padding-top: 0px;
                        }
                    }
                }

                .product__sizes {
                    width: 100%;
                    position: absolute;
                    bottom: 20px;
                    padding-right: rem(40px);
                    transition: all 0.3s ease;
                    text-transform: uppercase;
                    font-size: $text__size--mobile;
                    display: flex;
                    justify-content: space-between;
                    font-family: $font-sans;
                    opacity: 0;
                    color: $bg__color--grey;

                    .product__sizes--size {
                        cursor: pointer;
                        font-size: $text__size--mini;
                        display: inline-block;
                        padding: rem(3px) rem(10px);
                        border: 1px solid $text__color--red;
                        border-radius: $border-radius;

                        &:hover {
                            color: $bg__color--grey;
                            background-color: $bg__color--red;
                        }
                        // margin-left: rem(3px);
                    }
                }

                @media screen and (max-width: $desktop__small) {
                    padding: rem(15px);

                    .product__sizes {
                        padding-right: rem(28px);
                    }
                }

                @media screen and (max-width: $desktop__smallest) {
                }
            }

            &:hover {
                background: linear-gradient(180deg, rgba(239, 231, 222, 0) 13.54%, #efe7de 75%);
                .product__sizes {
                    color: $text__color--red;
                    opacity: 1;
                    // margin-top: rem(42px);
                    bottom: 20px;
                }

                .product__info {
                    a,
                    p {
                        color: $text__color--red;
                    }

                    margin-bottom: 32px;
                }
            }

            /* SINGLE PRODUCT BREAK POINTS */
            @media screen and (max-width: $desktop__small) {
                font-size: $text__size--small;
            }

            @media screen and (max-width: $desktop__smallest) {
                font-size: $text__size;
                .product__image__wrapper {
                    img {
                        width: 50%;
                    }
                }
            }

            @media screen and (max-width: $tablet) {
                font-size: $text__size;

                .product__image__wrapper {
                    img {
                        width: 40%;
                    }
                }
            }

            @media screen and (max-width: $phone) {
                .product__image__wrapper {
                    img {
                        width: 50%;
                    }
                }
            }

            // @media screen and (max-width: $phone) {
            //     font-size: $text__size--small;

            // }

            /* SINGLE PRODUCT BREAK POINTS END*/
        }

        /* PRODUCTS BREAK POINTS */
        @media screen and (max-width: $desktop__smallest) {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            grid-row-gap: rem(35px);
        }

        @media screen and (max-width: $phone) {
            grid-template-columns: 1fr;
        }
    }

    /* WRAPPER BREAK POINTS */
    @media screen and (max-width: $tablet) {
        padding-top: $padding__page--tablet;
    }
}

