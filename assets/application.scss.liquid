        display: flex;
        width: 100%;
        justify-content: space-between;
        align-items: center;

        #cart__close {
            transition: all 0.3s ease;
            svg {
                cursor: pointer;

                @media screen and (max-width: $desktop__smallest) {
                    stroke-width: 3;
                    width: rem(20px);
                }
            }

            &:hover {
                transform: rotate(90deg);
            }
        }
    }

    .cart__product {
        width: 100%;
        padding-left: rem(20px);
        display: flex;
        justify-content: space-between;
        border: 2px solid $bg__color--grey;
        border-bottom: none;

