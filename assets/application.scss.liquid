    padding-top: $padding__top--tablet;
    padding-bottom: $padding__top--tablet;

    #instagram__text--container {
        p {
            margin-bottom: rem(10px);
        }

        h1 {
            margin-top: 0;
        }
    }

    #instagram__feed {
        margin-top: rem(20px);
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        grid-gap: rem(50px);

        .instagram__post {
            .instagramm__handle {
                transition: all 0.2s ease;
                margin-top: rem(20px);
                padding: rem(10px) rem(20px);
                border-radius: $border-radius;
                background-color: $bg__color--grey;

                p {
                    text-align: center;
                    padding: 0;
                    margin: 0;
                    color: $text__color--blue;
                }

                &:hover {
                    cursor: pointer;
                    background-color: transparent;

                    p {
                        color: $text__color--purple;
                    }
                }
            }
        }

        @media screen and (max-width: $tablet) {
            grid-template-columns: repeat(2, 1fr);
            grid-gap: rem(30px);

            .instagram__post {
                .instagramm__handle {
                    margin-top: rem(10px);
                }
            }
        }

        @media screen and (max-width: $tablet) {
            .instagram__post {
                .instagramm__handle {
                    padding: rem(5px) rem(20px);
                    margin-top: rem(5px);
                }
            }
        }
    }

    @media screen and (max-width: $phone) {
        padding-top: $padding__top--mobile;
        padding-bottom: $padding__top--mobile;
    }
}

