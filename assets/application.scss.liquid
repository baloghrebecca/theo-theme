// CART START//

#cart {
    transition: all 0.5s ease;
    z-index: 1000;
    position: absolute;
    top: -100%;
    left: 0;
    right: 0;
    padding: rem(66px) $padding;
    background-color: $bg__color--red;
    color: $bg__color--grey;

    #cart__empty {
        display: flex;
        justify-content: center;
        align-items: center;

        img {
            width: 20%;
        }
    }

    #cart__headline {
        display: flex;
        width: 100%;
        justify-content: space-between;
        align-items: center;

        #cart__close {
            transition: all 0.3s ease;
            svg {
                cursor: pointer;

                @media screen and (max-width: $desktop__smallest) {
                    stroke-width: 3;
                    width: rem(20px);
                }
            }

            &:hover {
                transform: rotate(90deg);
            }
        }
    }

    .cart__product {
        width: 100%;
        padding-left: rem(20px);
        display: flex;
        justify-content: space-between;
        border: 2px solid $bg__color--grey;
        border-bottom: none;

        @media screen and (max-width: $desktop__smallest) {
            border-bottom: 1px solid $bg__color--grey;
        }

        .cart__product--title {
            width: 300px;

            @media screen and (max-width: $tablet) {
                width: 100px;
            }

            img {
                width: 10%;
            }
        }

        a {
            color: $bg__color--grey;
        }

        .cart__product--color {
            @media screen and (max-width: $tablet) {
                display: block;
                font-size: $text__size--mini;
            }
        }

        input {
            border: 0;
            text-align: center;
            background-color: $bg__color--grey;
            width: 20%;
            border-radius: 0;

            @media screen and (max-width: $desktop__smallest) {
                font-size: $text__mobile;
            }

            @media screen and (max-width: $tablet) {
                width: 25%;
            }
        }

        &:first-child {
            border-top-left-radius: $border-radius;
            border-top-right-radius: $border-radius;

            input {
                border-top-right-radius: $border-radius;
            }
        }

        &:nth-last-child(2) {
            border-bottom: 2px solid $bg__color--grey;
            border-bottom-left-radius: $border-radius;
            border-bottom-right-radius: $border-radius;

            input {
                border-bottom-right-radius: $border-radius;
            }

            @media screen and (max-width: $desktop__smallest) {
                border-bottom: 1px solid $bg__color--grey;
            }
        }
    }

    #cart__buttons {
        padding-top: $padding__top;
        width: 100%;
        display: flex;
        justify-content: flex-end;

        #cart__buttons__container {
            button {
                color: $bg__color--grey;
                border: solid $bg__color--grey 2px;
                border-radius: $border-radius;
                padding: rem(10px) rem(60px) rem(10px) rem(60px);

                &:hover {
                    color: $text__color--red;
                    background-color: $bg__color--grey;
                }

                @media screen and (max-width: $desktop__smallest) {
                    font-size: $text__size--mobile;
                    border: solid $bg__color--grey 1px;
                }

                @media screen and (max-width: $phone) {
                    padding: rem(10px) rem(40px) rem(10px) rem(40px);
                }
            }

            .button__filled {
                color: $text__color--red;
                background-color: $bg__color--grey;
                border-radius: $border-radius;
                padding: rem(10px) rem(60px) rem(10px) rem(60px);

                &:hover {
                    color: $bg__color--grey;
                    background-color: $text__color--red;
                    border-color: $bg__color--grey;
                }
                @media screen and (max-width: $phone) {
                    padding: rem(10px) rem(40px) rem(10px) rem(40px);
                }
            }
        }
        @media screen and (max-width: $desktop__smallest) {
            padding-top: $padding__top--mobile;
        }
    }

    h1 {
        -webkit-text-fill-color: transparent; /* Will override color (regardless of order) */
        -webkit-text-stroke-color: $bg__color--grey;
    }

    .h1__filled {
        -webkit-text-fill-color: $bg__color--grey;
        -webkit-text-stroke-width: 0px;
    }

    @media screen and (max-width: $tablet) {
        padding: rem(40px) $padding;
    }
}

//CART END //

// PRODUCT PAGE START //

#product__page {
    padding: $padding__page--start $margin__body;
    background: linear-gradient(180deg, #c9dadf 0%, #efe7de 90.1%);
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-column-gap: rem(70px);

    #product__page__image__slider {
        height: 100%;
        position: relative;

        #product__page__arrows {
            z-index: 8;
            width: 100;
            position: absolute;
            display: flex;
            justify-content: space-between;
            align-items: center;
            left: 0;
            right: 0;
            top: 50%;

            transform: translateY(-50%);
        }

        #product__page__image__container {
            position: relative;
            top: 0;
            left: 0;
            right: 0;
            width: 100%;
            background-color: red;

            #product__page__image__anchor {
                position: relative;
                top: 0;
                left: 0;
                right: 0;

                .product__page__img {
                    object-fit: cover;
                    opacity: 0;
                    position: absolute;
                    top: 0;
                    left: 50%;

                    transform: translateX(-50%);
                    width: 95%;

                    &:first-child {
                        opacity: 1;
                    }
                }
            }
        }

        #prouct__page__icon__container {
            font-size: $text__size--mobile;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            

            .prouct__page__icon {
                display: flex;
                align-items: center;
                color: $text__color--blue;
                margin-right: rem(15px);
                margin-bottom: rem(10px);

                svg {
                    margin-right: rem(15px);
                  
                }
            }
        }
    }

    #product__page__info {
        h1 {
            margin-top: 0;
            padding-top: 0;
            display: flex;
            justify-content: space-between;

            span {
                display: inline-block;
            }
        }

        #product__page__metafields {
            margin-top: rem(45px);

            .product__page__panel__container {
                transition: all 0.3s ease;
                margin: 0;

                border-top: 2px solid $text__color--red;

                &:first-child {
                    border-top: none;
                }

                &:nth-last-child(1) {
                    border-bottom: 2px solid $text__color--red;
                }
            }

            .product__page__panel__title {
                transition: all 0.3s ease;
                cursor: pointer;
                margin: rem(10px) 0;
                font-weight: $font-bold;
                display: flex;
                justify-content: space-between;

                span {
                    display: inline-block;
                }

                .product__page__panel__more {
                    transition: all 0.2s ease;
                    display: inline-block;
                    transform: rotate(0deg);
                }
            }

            .product__page__panel {
                transition: all 0.3s ease;
                display: none;
                padding-bottom: rem(20px);
            }
        }

        #product__page__form__container {
            font-weight: $font-bold;

            p {
                text-transform: uppercase;
                margin-bottom: rem(10px);
            }

            .product__page__form__sizes {
                display: flex;
                justify-content: space-between;
                align-items: center;
                flex-wrap: wrap;
                margin-bottom: rem(10px);

                #product__page__colors {
                    width: 100%;
                    display: flex;
                    justify-content: space-between;

                    .select__color {
                        text-transform: uppercase;
                        margin: 0;
                        @extend .button-radio;
                        margin-right: rem(10px);

                        &:hover {
                            text-decoration: none;
                        }
                    }
                }

                #product__page__sizes {
                    display: flex;

                    .select__sizes {
                        width: 45%;
                        @extend .visually-hidden;

                        & + label {
                            @extend .button-radio;
                            margin-right: rem(10px);
                        }

                        &:checked + label {
                            background-color: $bg__color--red;
                            color: $bg__color--grey;
                        }
                    }
                }
            }

            .product__page__form__quantity--container {
                display: flex;
                justify-content: space-between;
                align-items: flex-end;

                .product__page__form__quantity--input {
                    margin-right: rem(20px);
                    width: 40%;

                    .product__page__form__quantity--field {
                        width: 100%;
                        font-weight: $font-bold;
                        display: flex;
                        justify-content: space-between;
                        align-items: center;
                        border: 1px solid $text__color--red;
                        border-radius: $border-radius;
                        padding: $padding__button;
                        padding-top: rem(15px);
                        padding-bottom: rem(15px);

                        button {
                            padding: 0;
                            border: none;
                            font-weight: $font-bold;

                            &:hover {
                                background-color: transparent;
                                color: $text__color--red;
                            }

                            &:focus,
                            &:active {
                                outline: none;
                            }
                        }
                        .quantitiy__button--minus {
                            margin-left: rem(10px);
                        }
                        .quantitiy__button--plus {
                            margin-right: rem(10px);
                        }
                    }
                }

                .button__addToCart {
                    font-weight: $font-bold;
                    width: 60%;
                    @extend .cta--secondary;
                    height: 100%;

                    padding-top: rem(15px);
                    padding-bottom: rem(15px);

                    &:disabled {
                        cursor: default;
                        color: grey;
                        background-color: gainsboro;
                        border-color: grey;
                    }
                }
            }
        }
    }

    @media screen and (max-width: $phone) {
        grid-template-columns: 1fr;
    }
}

//PRODUCT PAGE END //
