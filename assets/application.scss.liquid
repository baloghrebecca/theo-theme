            border: 0;
            text-align: center;
            background-color: $bg__color--grey;
            width: 20%;
            border-radius: 0;

            @media screen and (max-width: $desktop__smallest) {
                font-size: $text__mobile;
            }

            @media screen and (max-width: $tablet) {
                width: 25%;
            }
        }

        &:first-child {
            border-top-left-radius: $border-radius;
            border-top-right-radius: $border-radius;

            input {
                border-top-right-radius: $border-radius;
            }
