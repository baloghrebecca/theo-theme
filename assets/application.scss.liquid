    color: $bg__color--grey;
    @extend .display-flex-horizontal;
    position: fixed;
    width: 100%;
    z-index: 99999;
    padding: 0 $margin__body;

    p {
        font-size: $text__size--mobile;
        margin: 0;
    }

    #shipping__close {
        display: flex;
        justify-content: flex-end;

        svg {
            width: 40%;
        }
    }

    @media screen and (max-width: $phone) {
        padding: 0 rem(20px);

        p {
            font-size: $text__size--mini;
            line-height: 0;
        }

        #shipping__close {
