/* INSTAGRAM FEED */

#instagram {
    background: linear-gradient(180deg, #efe7de 20%, #c9cddf 72.92%);
    padding: $margin__body;
    padding-top: $padding__top--tablet;
    padding-bottom: $padding__top--tablet;

    #instagram__text--container {
        p {
            margin-bottom: rem(10px);
        }

        h1 {
            margin-top: 0;
        }
    }

    #instagram__feed {
        margin-top: rem(20px);
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        grid-gap: rem(50px);

        .instagram__post {
            .instagramm__handle {
                transition: all 0.2s ease;
                margin-top: rem(20px);
                padding: rem(10px) rem(20px);
                border-radius: $border-radius;
