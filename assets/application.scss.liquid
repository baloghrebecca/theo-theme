/* PRODUCTS */

#products__wrapper {
    background-image: url("../assets/001-2.png");
    background-size: cover;
    padding: $margin__body;
    padding-top: $padding__page--tablet * 1.5;
    position: relative;
    padding-bottom: $padding__top;
    margin-bottom: rem(-10px);

    .background__gradient--grey {
        position: absolute;
        z-index: 10;
        top: 0px;
        bottom: 0;
        right: 0;
        left: 0;
        height: 100%;
        background: linear-gradient(180deg, rgba(239, 231, 222, 0) 40.94%, #efe7de 100%);
    }

    #products {
        z-index: 50;
        position: relative;
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        grid-column-gap: rem(35px);
        grid-row-gap: 5%;

        .product {
            width: 100%;
            position: relative;
            transition: all 0.3s ease;
            border-radius: $border-radius;
            height: auto !important;
            // padding-top: 57%;
            // max-height: 300px;

            a,
            p {
                padding-top: rem(17px);
                margin: 0;
                color: $text__color--blue;
                text-decoration: none;
                text-transform: uppercase;
                font-family: $font-sans;
                font-weight: $font-bold;
            }

            .product__image__wrapper {
                margin: 0 auto;
                width: 80%;
                margin-bottom: rem(25px);
                position: relative;
                height: 350px;

                img {
                    opacity: 0;
                    position: absolute;
                    bottom: -20px;
                    left: 50%;

                    transform: translateX(-50%);
                    width: 100%;

                    &:first-child {
                        opacity: 1;
                    }
                }

                .visible {
                    opacity: 1;
                }

                @media screen and (max-width: $phone) {
                    width: 100%;
                }
            }

            .product__details {
                width: 100%;
                padding: rem(20px);
                border-radius: $border-radius;
                background-color: $bg__color--grey;

                .product__icons {
                    display: flex;

                    .product__icon {
                        // margin-right: rem(8px);

                        svg {
                            width: 82%;
                        }
                    }
                }

                .product__icons__cartButton {
                    display: flex;
                    justify-content: space-between;
                    align-items: center;
                }

                .button__cart {
                    margin-bottom: rem(5px);
                    border: 1px solid $bg__color--cyan;
                    background-color: $text__color--blue;
                    color: $bg__color--grey;
                    font-size: $text__size--mini;
                    padding: rem(5px) rem(10px);

                    &:hover {
                        background-color: transparent;
                        color: $text__color--blue;
                    }
                }

                .shopify-payment-button {
                    z-index: 9999;
                    // display: flex;
                    // justify-content: flex-end;
                    // font-size: $text__size--mini;
                    // width: 70%;
                    // padding: rem(5px) rem(10px);
                }

                .product__info {
                    transition: all 0.2s ease;
                    display: flex;
                    justify-content: space-between;
                    align-items: center;
                    // font-size: $text__size--small;

                    a,
                    p {
                        padding-top: 5px;
                        @media screen and (max-width: $tablet) {
                            padding-top: 0px;
                        }
                    }
                }

                .product__sizes {
                    width: 100%;
                    position: absolute;
                    bottom: 20px;
                    padding-right: rem(38px);
                    transition: all 0.3s ease;
                    text-transform: uppercase;
                    font-size: $text__size--mobile;
                    display: flex;
                    justify-content: space-between;
                    align-items: center;
                    flex-wrap: wrap;
                    font-family: $font-sans;
                    opacity: 0;
                    color: $bg__color--grey;
                    margin-top: rem(10px);

                    .select__sizes {
                        width: 45%;
                        @extend .visually-hidden;

                        & + label {
                            font-size: $text__size--mini;
                            @extend .button-radio;
                            padding: rem(5px) rem(10px);
                            // margin-right: rem(10px);
                        }

                        &:checked + label {
                            background-color: $bg__color--red;
                            color: $bg__color--grey;
                        }
                    }

                    .sold__out {
                        width: 45%;
                        @extend .visually-hidden;

                        a {
                            &:hover {
                                color: $bg__color--grey;
                            }
                        }

                        & + label {
                            @extend .button-radio;
                            background-color: $bg__color--light-blue;
                            border-color: $text__color--blue;
                            color: $text__color--blue;

                            a {
                                &:hover {
                                    color: $bg__color--grey;
                                }
                            }

                            &:hover {
                                background-color: $text__color--blue;
                                color: $bg__color--light-blue;
                            }
                        }

                        &:checked + label {
                            background-color: $text__color--blue;
                            color: $bg__color--grey;
                        }
                    }

                    .product__sizes--headline {
                        padding: 0;
                        color: $text__color--red;
                        font-size: $text__size--mobile;

                        @media screen and (max-width: 1225px) {
                            opacity: 0;
                            font-size: $text__size--mini;
                        }

                        @media screen and (max-width: $desktop__smallest) {
                            opacity: 1;
                            font-size: $text__size--mobile;
                        }

                        @media screen and (max-width: 615px) {
                            opacity: 0;
                        }

                        @media screen and (max-width: $phone) {
                            opacity: 1;
                            font-size: $text__size--mobile;
                        }
                    }

                    @media screen and (max-width: $phone) {
                        color: $text__color--red;
                        opacity: 1;

                        bottom: 20px;
                    }
                }

                @media screen and (max-width: $desktop__small) {
                    padding: rem(15px);

                    .product__sizes {
                        padding-right: rem(28px);
                    }
                }

                @media screen and (max-width: $desktop__smallest) {
                }
            }

            &:hover {
                background: linear-gradient(180deg, rgba(239, 231, 222, 0) 13.54%, #efe7de 75%);
                .product__sizes {
                    color: $text__color--red;
                    opacity: 1;

                    bottom: 20px;
                }

                .product__info {
                    a,
                    p {
                        color: $text__color--red;
                    }

                    margin-bottom: 32px;
                }
            }

            /* SINGLE PRODUCT BREAK POINTS */
            @media screen and (max-width: $desktop__small) {
                font-size: $text__size--small;
            }

            @media screen and (max-width: $desktop__smallest) {
                font-size: $text__size;
                .product__image__wrapper {
                    img {
                        width: 70%;
                    }
                }
            }

            @media screen and (max-width: $tablet) {
                font-size: $text__size;

                .product__image__wrapper {
                    img {
                        width: 80%;
                    }
                }
            }

            @media screen and (max-width: $phone) {
                background: linear-gradient(180deg, rgba(239, 231, 222, 0) 13.54%, #efe7de 75%);

                .product__info {
                    a,
                    p {
                        color: $text__color--red;
                    }

                    margin-bottom: 32px;
                }

                .product__image__wrapper {
                    img {
                        width: 65%;
                    }
                }
            }

            // @media screen and (max-width: $phone) {
            //     font-size: $text__size--small;

            // }

            /* SINGLE PRODUCT BREAK POINTS END*/
        }

        /* PRODUCTS BREAK POINTS */
        @media screen and (max-width: $desktop__smallest) {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            grid-row-gap: rem(35px);
        }

        @media screen and (max-width: $phone) {
            grid-template-columns: 1fr;
        }
    }

    /* WRAPPER BREAK POINTS */

    @media screen and (max-width: $desktop__small) {
        padding-top: $padding__page--tablet * 1.2;
    }

    @media screen and (max-width: $tablet) {
        padding-top: $padding__page--tablet;
    }

    @media screen and (max-width: $phone) {
        padding-top: rem(170px);
    }
}

