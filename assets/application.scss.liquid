// SPACE MONO + WORK SANS IMPORT
@import url("https://fonts.googleapis.com/css2?family=Space+Mono:wght@400;700&family=Archivo+Black&display=swap");
@import url("https://use.typekit.net/acx5mlt.css");

@function rem($pixel) {
    @return $pixel / 16px * 1rem;
}

/* VARIABLES */

/* Text */
$font-mono: "Space Mono", monospace;
$font-sans: nimbus-sans, sans-serif;
$font-regular: 400;
$font-bold: 700;
$font-black: 900;
$text__color--red: #e6332a;
$text__color--purple: #702f8a;
$text__color--blue: #36a9e1;
$text__size: rem(20px);
$text__size--small: rem(16px);
$text__size--mobile: rem(16px);
$text__size--mini: rem(12px);
$text__size--headline: rem(64px);
$text__size--headline__small: rem(54px);
$text__size--headline__tablet: rem(44px);
$text__size--headline__mobile: rem(29px);
$text__mobile: rem(15px);

/* Background */
$bg__color--grey: #efe7de;
$bg__color--cyan: #36a9e1;
$bg__color--purple: #b998ba;
$bg__color--red: #e6332a;

/* Spaces */
$margin__body: rem(44px);
$padding: rem(25px);
$padding__mobile: 10px 15px;
$padding__top: rem(120px);
$padding__top--tablet: rem(90px);
$padding__top--mobile: rem(65px);
$padding__page--start: rem(400px);
$padding__page--tablet: rem(220px);
$padding__button: rem(5px) rem(10px);

/* Break points*/
$desktop: 1260px;
$desktop__small: 1098px;
$desktop__smallest: 954px;
$tablet: 780px;
$phone: 550px;

/* Border */
$border-radius: rem(12px);

/* STYLELING */

* {
    box-sizing: border-box;
}

@-webkit-keyframes ticker {
    0% {
        -webkit-transform: translate3d(0, 0, 0);
        transform: translate3d(0, 0, 0);
        visibility: visible;
    }
    100% {
        -webkit-transform: translate3d(-100%, 0, 0);
        transform: translate3d(-100%, 0, 0);
    }
}
@keyframes ticker {
    0% {
        -webkit-transform: translate3d(0, 0, 0);
        transform: translate3d(0, 0, 0);
        visibility: visible;
    }
    100% {
        -webkit-transform: translate3d(-100%, 0, 0);
        transform: translate3d(-100%, 0, 0);
    }
}

/* GENERAL STYLING */

html {
    padding: 0;
}

body {
    overflow-x: hidden;
    font-family: $font-mono;
    font-weight: $font-regular;
    font-size: $text__size;
    color: $text__color--red;
    margin: 0;
    word-wrap: break-word;

    @media screen and (max-width: $desktop__small) {
        font-size: $text__size--small;
    }
}

img {
    width: 100%;
}

h1 {
    text-transform: uppercase;
    font-family: $font-sans;
    font-weight: $font-regular;
    font-size: $text__size--headline;
    line-height: 0.95;
    -webkit-text-fill-color: transparent; /* Will override color (regardless of order) */
    -webkit-text-stroke-width: 2px;
    -webkit-text-stroke-color: $text__color--red;

    .h1__filled {
        -webkit-text-fill-color: $text__color--red;
        -webkit-text-stroke-width: 0px;
    }

    @media screen and (max-width: $desktop__small) {
        font-size: $text__size--headline__small;
        line-height: 1;
    }

    @media screen and (max-width: $desktop__smallest) {
        font-size: $text__size--headline__mobile;
        -webkit-text-stroke-width: 1px;
    }
}

button {
    transition: 0.2s all ease;
    cursor: pointer;
    font-family: $font-mono;
    text-transform: uppercase;
    font-size: $text__size;
    background-color: transparent;
    color: $text__color--red;
    border: solid $text__color--red 2px;
    border-radius: $border-radius;
    padding: rem(10px) rem(0px) rem(10px) rem(10px);

    &:hover {
        color: $bg__color--grey;
        background-color: $bg__color--red;
    }

    @media screen and (max-width: $desktop__small) {
        font-size: $text__size--mobile;
        border: solid $text__color--red 1px;
    }
}

input {
    background-color: transparent;
    border: 2px solid $bg__color--red;
    color: $bg__color--red;
    font-family: $font-mono;
    border-radius: $border-radius;
    width: 100%;
    padding: rem(10px) rem(20px);
    font-size: $text__size;

    &:focus,
    &:active {
        outline: 0;
    }

    @media screen and (max-width: $tablet) {
        font-size: $text__size--mobile;
        border: solid $text__color--red 1px;
    }
}

h3 {
    font-family: $font-sans;
    font-size: $text__size;
    margin: rem(10px) rem(0px);

    @media screen and (max-width: $desktop__small) {
        font-size: $text__size--mobile;
    }
}

a {
    color: $text__color--red;
    text-decoration: none;

    &:hover {
        text-decoration: underline;
    }
}

.visually-hidden {
    position: absolute;
    height: 1px;
    width: 1px;
    overflow: hidden;
    clip: rect(1px, 1px, 1px, 1px);
}

.active {
    background-color: $bg__color--red;
    color: $bg__color--grey;
    border: 1px solid transparent;
}

.button-radio {
    font-size: $text__size--mobile;
    transition: 0.2s ease all;
    cursor: pointer;
    border: solid 1px $text__color--red;
    border-radius: $border-radius;
    padding: rem(5px) rem(20px);

    &:hover {
        background-color: $bg__color--red;
        color: $bg__color--grey;
    }
}

.cta--secondary {
    text-transform: uppercase;
    transition: 0.2s ease all;
    padding: $padding__button;
    background-color: $bg__color--grey;
    color: $text__color--red;
    border: 1px solid transparent;

    &:hover {
        background-color: transparent;
        color: $text__color--red;
        border-color: $text__color--red;
    }
}

/* END GENERAL STYLING */

